{% extends '::base.html.twig' %}

{% block body -%}
    <h1>activity list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Programname</th>
                <th>Programdetail</th>
                <th>Contact</th>
                <th>Duration</th>
                <th>Agegroup</th>
                <th>Gender</th>
                <th>Location</th>
                <th>Eventdates</th>
                <th>Url</th>
                <th>Popular</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('activity_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.programname }}</td>
                <td>{{ entity.programdetail }}</td>
                <td>{{ entity.contact }}</td>
                <td>{{ entity.duration }}</td>
                <td>{{ entity.agegroup }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.eventdates }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.popular }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('activity_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('activity_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('activity_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
