{% extends '::base.html.twig' %}

{% block body -%}
    <h1>career list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Groupname</th>
                <th>Jobs</th>
                <th>Skillinterests</th>
                <th>Profile</th>
                <th>Url</th>
                <th>Popular</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('career_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.groupname }}</td>
                <td>{{ entity.jobs }}</td>
                <td>{{ entity.skillInterests }}</td>
                <td>{{ entity.profile }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.popular }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('career_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('career_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('career_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
